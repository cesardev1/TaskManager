<label><i class="bi bi-paperclip"></i>Archivos adjuntos</label>
<button class="btn btn-secondary btn-sm" onclick="handleClickAddAttachedFile()"><i class="bi bi-plus"></i></button>
<input type="file"
       onchange="handleFileSelected(event)"
       id="FileToDo" multiple style="display: none"/>

<div data-bind="foreach:attachments">
    <div>
        <div style="cursor: pointer" class="fw-bold text-bg-light text-primary" data-bind="text: title, hidden: isEditing, click: handleClickTitleFileAttached"></div>
        <div data-bind="visible: isEditing, event: {focusout: handleFocusoutTitleFileAttached}">
            <input name="txtFileTitle" type="text" class="form-control"
                   data-bind="value: title,attr:{'data-id':id}"/>
        </div>
        <div>
            Agregado <span data-bind="text: published"></span> -
            <span class="fw-bold" style="cursor: pointer"
                  data-bind="click: handleClickDeleteFileAttached"> Borrar </span> -
            <span class="fw-bold" style="cursor: pointer"> Descargar </span>
        </div>
    </div>
</div>