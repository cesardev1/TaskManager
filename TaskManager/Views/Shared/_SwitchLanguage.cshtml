@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using TaskManager.Services
@inject IViewLocalizer Localizer

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var urlReturn = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}

<form asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@urlReturn" method="post" class="form-horizontal" role="form" style="display: inline">
    <label>@Localizer["Languague"]:</label>
    <select name="culture" asp-for="@requestCulture.RequestCulture.UICulture.Name" id="culture" onchange="this.form.submit()" asp-items="GlobalConstants.SupportedCulturesUI"></select>
</form>